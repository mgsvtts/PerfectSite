@inject UserManager<User> UserManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" href="/cat.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/cat.ico" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PerfectSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PerfectSite.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" >
            <div class="container-fluid">
                <a class="navbar-brand"  style="color:#d1cdc7;" asp-area="" asp-controller="Home" asp-action="Index">Perfect Site</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"></li>
                        <li class="nav-item"> </li>
                    </ul>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            User user = await UserManager.FindByNameAsync(User?.Identity?.Name);
                            if (user != null)
                            {
                                <a class="btn btn-primary text-center" asp-controller = "Cabinet" asp-action = "Main" asp-route-id = "@user.Id">Личный кабинет</a>
                            }
                            else
                            {
                                <a class="btn btn-primary text-center" asp-controller="Account" asp-action="Login" >Войти</a>
                            }
                        }
                        else
                        {
                            <a class="btn btn-primary text-center" asp-controller="Account" asp-action="Login" >Войти</a>
                        }
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Perfect Site - <a asp-controller = "Home" asp-action = "DownloadDocumentation">Скачать документацию</a>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
