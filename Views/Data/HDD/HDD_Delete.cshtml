@model WebApplication1.Data.Products.HDD
@{
    ViewBag.Title = "Удаление HDD";
}
 <html>
     <body>
         <div>
    <dl class="dl-horizontal my-text">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.ModelName)
        </dd>
 
        <dt>Производитель</dt>
        <dd>
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
    </dl>
 
    <div>
