@model PerfectSite.Data.Products.GPU
@{
    ViewBag.Title = "Информация о GPU";
}


<html>
    <body>
        <form asp-action="GPU_Create" asp-controller="Data" class = "my-text my-border-color">
              <div asp-validation-summary = "ModelOnly"></div>
    <div class="form-group">
        <label asp-for="ModelName" class="control-label">Название</label>
        <input type="text" asp-for="ModelName" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer.Name" class="control-label">Произодитель</label>
        <input type="text" asp-for="Manufacturer.Name" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    <div class="form-group">
        <label asp-for="GPUFrequency" class="control-label">Частота ядра</label>
        <input type="number" step = "any" asp-for="GPUFrequency" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    <div class="form-group">
        <label asp-for="MemorySize" class="control-label">Колличество видеопамяти</label>
        <input type="number" asp-for="MemorySize" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    <div class="form-group">
        <label asp-for="MemoryType" class="control-label">Тип памяти</label>
        <input type="text"  asp-for="MemoryType" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    
    <div class="form-group">
        <label asp-for="MemoryFrequency" class="control-label">Частота памяти</label>
        <input type="number" step = "any" asp-for="MemoryFrequency" class="form-control my-text my-border-color my-textbar-background" />
    </div>
     <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" step = "any" asp-for="Price" class="form-control my-text my-border-color my-textbar-background" />
    </div>
     <div class="form-group">
        <label asp-for="Amount" class="control-label">Колличество на складе</label>
        <input type="number" asp-for="Amount" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control my-text my-border-color my-textbar-background" />
    </div>
     <div class="form-group">
        <input type="hidden" asp-for="BoughtTimes" value = 0/>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-primary" />
    </div>

</form>
    </body>
</html>
