@model PerfectSite.Data.Products.PowerSupply
@{
    ViewBag.Title = "Редактирование блока питания";
}
<html>
    <body>
        <form asp-action="PowerSupply_Edit" asp-controller="Data" asp-route-id="@Model.Id" class = "my-text my-border-color">
              <div asp-validation-summary = "ModelOnly"></div>
    <div class="form-group">
        <label asp-for="ModelName" class="control-label">Название</label>
        <input type="text" asp-for="ModelName" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer.Name" class="control-label">Произодитель</label>
        <input type="text" asp-for="Manufacturer.Name" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    <div class="form-group">
        <label asp-for="Power" class="control-label">Мощность</label>
        <input type="number" step = "any" asp-for="Power" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    <div class="form-group">
        <label asp-for="Certificate" class="control-label">Сертификат</label>
        <input type="text" asp-for="Certificate" class="form-control my-text my-border-color my-textbar-background" />
    </div>
     <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" step = "any" asp-for="Price" class="form-control my-text my-border-color my-textbar-background" />
    </div>
     <div class="form-group">
        <label asp-for="Amount" class="control-label">Колличество на складе</label>
        <input type="number" asp-for="Amount" class="form-control my-text my-border-color my-textbar-background" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control my-text my-border-color my-textbar-background" value = "@Model.Description"/>
    </div>
     <div class="form-group">
        <input type="hidden" asp-for="BoughtTimes" value = "@Model.BoughtTimes"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-primary" />
    </div>

</form>
    </body>
</html>