@model WebApplication1.Data.Products.CPU
@{
    ViewBag.Title = "Информация CPU";
}

<html>
    <body>
        <h2>Модель @Model.ModelName</h2>

<div class = "my-text dl-horizontal">
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.Id</dd>
 
        <dt>Производитель</dt>
        <dd>@Model.Manufacturer.Name</dd>

        <dt>Колличество ядер</dt>
        <dd>@Model.Cores</dd>

        <dt>Колличество потоков</dt>
        <dd>@Model.Threads</dd>

        <dt>Частота ядра</dt>
        <dd>@Model.Speed</dd>

        <dt>TDP</dt>
        <dd>@Model.PowerUsage</dd>

        <dt>Сокет</dt>
        <dd>@Model.Socket</dd>

        <dt>Цена</dt>
        <dd>@Model.Price</dd>

        <dt>Осталось на складе</dt>
        <dd>@Model.Amount</dd>

        <dt>Куплен</dt>
        <dd>@Model.BoughtTimes раз</dd>
    </dl>
    <a class = "btn btn-primary" asp-controller = "Store" asp-action = "HDDs">Назад</a>
</div>
    </body>
</html>
