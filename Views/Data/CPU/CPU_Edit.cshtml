@model PerfectSite.Data.Products.CPU
@{
    ViewBag.Title = "Редактирование CPU";
}

<form asp-action="CPU_Edit" asp-controller="Data" asp-route-id="@Model.Id">
      <div asp-validation-summary = "All"></div>
   <div class="form-group">
        <label asp-for="ModelName" class="control-label">Название</label>
        <input type="text" asp-for="ModelName" class="form-control my-text my-border-color my-textbar-background" value = "@Model.ModelName"/>
         <span asp-validation-for="ModelName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer.Name" class="control-label">Произодитель</label>
        <input type="text" asp-for="Manufacturer.Name" class="form-control my-text my-border-color my-textbar-background" value = "@Model.Manufacturer.Name"/>
        <span asp-validation-for="Manufacturer.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Speed" class="control-label">Частота ядра</label>
        <input type="number" step="0.1" min="0" max = "100" asp-for="Speed" class="form-control my-text my-border-color my-textbar-background" value = "@Model.Speed"/>
         <span asp-validation-for="Speed"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cores" class="control-label">Колличество ядер</label>
        <input type="number" asp-for="Cores" class="form-control my-text my-border-color my-textbar-background" value = "@Model.Cores"/>
         <span asp-validation-for="Cores"></span>
    </div>
    <div class="form-group">
        <label asp-for="Threads" class="control-label">Колличество потоков</label>
        <input type="number" asp-for="Threads" class="form-control my-text my-border-color my-textbar-background" value = "@Model.Threads"/>
         <span asp-validation-for="Threads"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="PowerUsage" class="control-label">TDP</label>
        <input type="number" asp-for="PowerUsage" class="form-control my-text my-border-color my-textbar-background" value = "@Model.PowerUsage"/>
         <span asp-validation-for="PowerUsage"></span>
    </div>
    <div class="form-group">
        <label asp-for="Socket" class="control-label">Сокет</label>
        <input type="text" asp-for="Socket" class="form-control my-text my-border-color my-textbar-background" value = "@Model.Socket"/>
         <span asp-validation-for="Socket"></span>
    </div>
     <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" step = "any" asp-for="Price" class="form-control my-text my-border-color my-textbar-background" value = "@Model.Price"/>
         <span asp-validation-for="Price"></span>
    </div>
     <div class="form-group">
        <label asp-for="Amount" class="control-label">Колличество на складе</label>
        <input type="number" asp-for="Amount" class="form-control my-text my-border-color my-textbar-background" value = "@Model.Amount"/>
         <span asp-validation-for="Amount"></span>
    </div>
     <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control my-text my-border-color my-textbar-background" value = "@Model.Description"/>
    </div>
      <div class="form-group">
        <input type="hidden" asp-for="BoughtTimes" value = "@Model.BoughtTimes"/>
        <input type = "hidden" asp-for = "Manufacturer.Products">
    </div>
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-primary my-btn"/>
    </div>
</form>