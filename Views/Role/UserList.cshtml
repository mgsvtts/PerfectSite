@model IEnumerable<WebApplication1.Models.User>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Roles";
}

<h2>Список пользователей</h2>
<table class="table"  style="color:#d1cdc7;">
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName @user.SecondName</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
            </td>
        </tr>
    }
</table>

<a class =" btn btn-sm btn-primary" asp-controller = "Role" asp-action = "Main">Назад</a>