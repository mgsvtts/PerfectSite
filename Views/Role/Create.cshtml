@model string
@{
    Layout = "_Layout";
    ViewData["Title"] = "Roles";
}

 
<div asp-validation-summary="All" class="text-danger"></div>
 
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Новая роль</label>
        <input name="name" class="form-control" style="background-color: #232627; color:#d1cdc7;  border-color:  #16191b;"/>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>


<a class =" btn btn-sm btn-primary" asp-controller = "Role" asp-action = "Main">Назад</a>