@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Roles";
}
 
<h2>Список ролей</h2>
<table class="table"  style="color:#d1cdc7;">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-controller = "Role" asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-controller = "Role"asp-action="Create">Добавить роль</a>
<a asp-controller = "Role" asp-action="UserList">Список пользователей</a>