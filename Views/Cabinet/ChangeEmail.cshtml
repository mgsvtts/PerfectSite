@model PerfectSite.ViewModels.Cabinet.ChangeEmailViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Change name";
}

<html>
    <body>
        <form method = "post" asp-controller = "Cabinet" asp-action = "ChangeEmail">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="OldEmail" />
     <label asp-for="NewEmail" class="control-label">Новая почта</label>
        <input type="text" asp-for="NewEmail"  class="form-control" style="background-color: #232627; color:#d1cdc7;  border-color:  #16191b;"/>
        <span asp-validation-for = "NewEmail"></span>
        <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
 
    </body>
</html>


