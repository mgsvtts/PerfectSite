@model WebApplication1.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}
<html>
    <body>
        <h2>Изменение пароля пользователя</h2>
<form method = "post" asp-action="ChangePassword" asp-controller="Cabinet">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
 
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <p>@Model.Id</p>
    <p>@Model.Email</p>
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Старый пароль</label>
        <input type="text" asp-for="OldPassword"  class="form-control" />
        <span asp-validation-for = "OldPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
          <span asp-validation-for = "NewPassword"></span>
    </div>
    <div>
         <label asp-for="ConfirmPassword" class="control-label">Повторите пароль</label>
        <input type="text" asp-for="ConfirmPassword" class="form-control" />
          <span asp-validation-for = "ConfirmPassword"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
 @foreach (var modeleState in ViewData.ModelState.Values)
         {
            foreach (var error in modeleState.Errors)
             {
                <h5 style="color:red;margin-top:8px;">@error.ErrorMessage</h5>
             }
          }
    </body>
</html>
