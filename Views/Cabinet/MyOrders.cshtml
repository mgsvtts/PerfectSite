@model IEnumerable<PerfectSite.Models.Order>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My orders";
}
 <h2>Список моих заказов</h2>
        <table class="table my-text">
        <tr>
            <th>ID</th>
            <th>ID товара</th>
            <th>Колличество</th>
            <th>Дата создания</th>
        </tr>
        @foreach (var order in Model)
        {
        <tr>
            <td>@order.Id</td>
            <td>@order.ProductId</td>
            <td>@order.Quantity</td>
            <td>@order.CreatedAt</td>
        </tr>
        }
</table>
<a class = "btn btn-primary my-btn" asp-action="Main">Вернуться в личный кабинет</a>