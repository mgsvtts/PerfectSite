@model WebApplication1.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registration";
    Layout = "_Layout";
}


<!DOCTYPE html>
<html>
    <body>
        <h2 class = "text-center">Страница регистрации</h2>
        <form method = "post" class = "registration-form" asp-controller="Account" asp-action = "Register">
         @foreach (var modeleState in ViewData.ModelState.Values)
         {
            foreach (var error in modeleState.Errors)
             {
                <h5 style="color:red;margin-top:8px;">@error.ErrorMessage</h5>
             }
         }
            <p>Заполните следующие поля:</p>
            <div class = "form-group">
                <label asp-for = "FirstName" class = "col-md-4  control-label" >Имя:</label>
                <div class = "col-md-4">
                    <input type = "text" asp-for = "FirstName" class = "form-control"/>
                    <span asp-validation-for = "FirstName"></span>
                </div>
            </div>
             <div class = "form-group">
                <label asp-for = "SecondName" class = "col-md-4  control-label" >Фамилия:</label>
                <div class = "col-md-4">
                    <input type = "text" asp-for = "SecondName" class = "form-control"/>
                    <span asp-validation-for = "SecondName"></span>
                </div>
            </div>
           <div class = "form-group">
                <label asp-for = "Email" class = "col-md-4  control-label" >Email:</label>
                <div class = "col-md-4">
                    <input type = "email" asp-for = "Email" class = "form-control"/>
                    <span asp-validation-for = "Email"></span>
                </div>
            </div>
            <div class = "form-group">
                <label asp-for = "Password" class = "col-md-4  control-label" >Пароль:</label>
                <div class = "col-md-4">
                    <input type = "password" asp-for = "Password" class = "form-control"/>
                    <span asp-validation-for = "Password"></span>
                </div>
            </div>
              <div class = "form-group">
                <label asp-for = "ConfirmPassword" class = "col-md-4  control-label" >Подтвердите пароль:</label>
                <div class = "col-md-4">
                    <input type = "password" asp-for = "ConfirmPassword" class = "form-control"/>
                    <span asp-validation-for = "ConfirmPassword"></span>
                </div>
            </div>
            <div class = "form-group">
                <label asp-for = "PhoneNumber" class = "col-md-4  control-label" >Номер телефона (необязательно):</label>
                <div class = "col-md-4">
                    <input type = "text" asp-for = "PhoneNumber" class = "form-control"/>
                    <span asp-validation-for = "PhoneNumber"></span>
                </div>
            </div>
             <div class = "form-group">
                <label asp-for = "BirthDate" class = "col-md-4  control-label" >Дата рождения (для получения бонусов):</label>
                <div class = "col-md-4">
                    <input type = "date" asp-for = "BirthDate" class = "form-control"/>
                    <span asp-validation-for = "BirthDate"></span>
                </div>
            </div>
            <div>
                <input type = "submit" class = "btn btn-primary" value = "Подтвердить"/>
            </div>
        </form>
        <div class="col-xl-12" style="margin-top:40px;">
     </div>
    </body>
</html>
