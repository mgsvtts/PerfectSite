@model WebApplication1.ViewModels.LoginViewModel;
@{

    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<html>
    <body>
        <h2 class = "text-center">Страница входа</h2>
        <form method="post" asp-controller="Account" asp-action="Login">
              <div asp-validation-summary="ModelOnly"></div>
          <div class = "form-group">
              <label asp-for="Email"  class = "col-md-4  control-label">Email:</label><br />
               <div class = "col-md-4">
                   <input type = "text" asp-for="Email" class = "form-control" />
                   <span asp-validation-for="Email"></span>
              </div>
          </div>
          <div class = "form-group">
              <label asp-for="Password"  class = "col-md-4  control-label">Пароль:</label><br />
               <div class = "col-md-4">
                   <input type = "password" asp-for="Password" class = "form-control" />
                   <span asp-validation-for="Password"></span>
              </div>
          </div>
          <div  class = "form-group">
              <label asp-for="RememberMe"></label><br />
              <input asp-for="RememberMe" />
          </div>
          <div>
              <input type="submit" class = "btn btn-primary" value="Войти" />
          </div>
        </form>
    </body>
</html>
