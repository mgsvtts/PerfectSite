@model WebApplication1.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
    Layout = "_Layout";
}
<html>
    <body>
        <h2>Изменение пароля для @Model.Email</h2>
        <form asp-action="ChangePassword" asp-controller="User">
                  <div asp-validation-summary="ModelOnly"></div>
 
                  <input type="hidden" asp-for="Id" />
                  <input type="hidden" asp-for="Email" />
            <div class="form-group">
                 
                  <label asp-for="OldPassword" class="control-label">Старый пароль</label>
                  <div class = "col-md-4">
                  <input type="password" asp-for="OldPassword" class="form-control" />
                  </div>
            </div>
             <div class="form-group">
                 <label asp-for="NewPassword" class="control-label">Новый пароль</label>
                 <div class = "col-md-4">
                
                 <input type="password" asp-for="NewPassword" class="form-control" />
                 </div>
              </div>
               <div class="form-group">
                 <label asp-for="ConfirmPassword" class="control-label">Повторите пароль</label>
                 <div class = "col-md-4">
                
                 <input type="password" asp-for="ConfirmPassword" class="form-control" />
                 </div>
              </div>
             <div class="form-group">
                 <input type="submit" value="Сохранить" class="btn btn-default" />
             </div>
        </form>
    </body>
</html>
