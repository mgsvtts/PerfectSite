@using Microsoft.AspNetCore.Identity
@model PerfectSite.Areas.Account.ViewModels.Role.ChangeRoleViewModel
@{
     
    ViewData["Title"] = "Roles";
}

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>
 
<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
        }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>


<a class =" btn btn-sm btn-primary" asp-controller = "Role" asp-action = "UserList">Назад</a>