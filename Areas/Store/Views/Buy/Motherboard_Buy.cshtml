@model PerfectSite.Areas.Store.ViewModels.BuyViewModel
@{
     
    ViewData["Title"] = "Buy page";
}

<html>
    <body>
         <h2 class = "text-center">Страница оформления заказа</h2>
        <form asp-controller="Buy" asp-action="Motherboard_Buy">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="ProductId" value = "@Model.ProductId"/>
            <input type="hidden" asp-for="CreatedAt" value = "@Model.CreatedAt"/>
            <input type = "hidden" asp-for="Id" value = "@Model.Id"/>
          <div class = "form-group">
              <label asp-for="UserName"  class = "col-md-4  control-label">Имя:</label><br />
              <div class = "col-md-4">
                   <input type = "text" asp-for="UserName" class = "form-control" style="background-color: #232627; color:#d1cdc7;  border-color:  #121415;" value = "@Model.UserName"/>
                   <span asp-validation-for="UserName"></span>
              </div>
                  <label asp-for="Address"  class = "col-md-4  control-label">Адрес:</label><br />
                  <div class = "col-md-4">
                      <input type = "text" asp-for="Address" class = "form-control" style="background-color: #232627; color:#d1cdc7;  border-color:  #121415;"/>
                      <span asp-validation-for="Address"></span>
                  </div>
               <label asp-for="Quantity"  class = "col-md-4  control-label">Колличество:</label><br />
                  <div class = "col-md-4">
                      <input type = "number" asp-for="Quantity" class = "form-control" style="background-color: #232627; color:#d1cdc7;  border-color:  #121415;" value = "1"/>
                      <span asp-validation-for="Quantity"></span>
                  </div>
                  <div>
                    <input type="submit" class = "btn btn-primary" value="Подтвердить" />
                  </div>
          </div>
          
        </form>
   </body>
</html>
